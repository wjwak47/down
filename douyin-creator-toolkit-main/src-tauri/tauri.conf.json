{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "抖音运营工具箱",
  "version": "1.1.0",
  "identifier": "com.douyin.creator-toolkit",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://127.0.0.1:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "抖音运营工具",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "center": true,
        "transparent": false,
        "decorations": false,
        "shadow": true,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "nsis"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/dy-mcp",
      "resources/python-embed",
      "resources/ffmpeg",
      "DirectML.dll",
      "onnxruntime.dll",
      "sherpa-onnx-c-api.dll",
      "sherpa-onnx-cxx-api.dll"
    ],
    "externalBin": [],
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "headerImage": "icons/header.bmp",
        "sidebarImage": "icons/sidebar.bmp",
        "installMode": "currentUser",
        "languages": [
          "SimpChinese"
        ],
        "displayLanguageSelector": false,
        "installerHooks": "nsis/hooks.nsh"
      },
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    },
    "licenseFile": "nsis/license.txt",
    "shortDescription": "抖音运营工具箱 - 视频下载、字幕提取、数据分析",
    "longDescription": "抖音运营工具箱是一款专为抖音创作者设计的桌面应用，提供视频下载、字幕提取、数据分析等功能。"
  }
}